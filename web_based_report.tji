navigator navbar {
  hidereport @none
}

macro TaskTip [
  tooltip istask() -8<-
    '''Due date ''' <-query attribute='end'->
    ----
    '''Resources:'''

    <-query attribute='resources'->
    ----
    '''Precursors: '''

    <-query attribute='precursors'->
    ----
    '''Followers: '''

    <-query attribute='followers'->
    ->8-
]

macro TaskTip_Detailed [
  tooltip istask() -8<-
    '''Start: ''' <-query attribute='start'->
    '''End: '''   <-query attribute='end'->
    ----
    '''Resources:'''

    <-query attribute='resources'->
    ----
    '''Precursors: '''

    <-query attribute='precursors'->
    ----
    '''Followers: '''

    <-query attribute='followers'->
    ->8-
]

