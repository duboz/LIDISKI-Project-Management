       ->8-
    columns name, start, end,
            responsible {width 100 listtype bullets},
            chart { ${TaskTip_Detailed} scale day width 500 }
    taskroot WP2
    timeformat "%Y-%m-%d"
    hideresource ~(isleaf() & isleaf_())
    sortresources name.up
  }

  taskreport WP3 "" {
    scenarios plan
